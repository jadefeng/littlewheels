<div class="form_page">
	<%= form_for @trip do |f| %>
	<div class="form_segment">
		<%= f.label :seats_available  , "Seats Available:" %>
		<select>
		  <option  name="seats_available" value="1">1</option>
		  <option  name="seats_available" value="2">2</option>
		  <option  name="seats_available" value="3">3</option>
		</select>
	</div>
	<div class="form_segment">
		<%= f.label :school, "School Destination:"  %>
		<%= f.select :school_id, School.all.map { |school| [school.name, school.id] }, :include_blank => true, :prompt => "Select school" , required: true %>
	</div>
	<div class="form_segment">
		<%= f.label :direction  , "Direction:" %>
		<select>
			<option value="pickup">Pick-up</option>
			<option value="dropoff">Drop-off</option>
		</select>
	</div>

	<div class="form_segment">
		<%= f.label :desired_start_time  , "Start Time:" %>
		<%= f.time_field :desired_start_time, required: true %>
	</div>
	<div class="form_segment">
		<%= f.label :date  , "Date:" %>
		<%= f.date_field :date, required: true %>
	</div>

		<label></label>
		<%= f.submit %>
	<% end %>
</div>