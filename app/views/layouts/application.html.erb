<!DOCTYPE html>
<html>
<head>
  <title>Little Wheels</title>
  
    <!-- Custom Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <!-- Navigation 1 -->

<nav>
    <div class="nav_bar_top">
    <% if @current_user  %>
    <div class="icon">
        <a href='/' > <img class="profile_icon" src=
        <% if @current_user.avatar.url == "/avatars/original/missing.png"  %>
            <%= @current_user.image %>
        <% else %>
             <%= @current_user.avatar.url %> 
        <% end %> > 
        </a>
    </div>

     <div class="container">
        <ul class="nav nav-pills">
            <%== intellinav_logged_in  %>
        </ul>
    </div>   

    <% else %> 
     <div class="container">
        <ul class="nav nav-pills">
            <%== intellinav_not_logged_in  %>
        </ul>
    </div>   


    <% end %>
    </div>
</nav> 

    <!-- Navigation 2 -->
    <a id="menu-toggle" href="/" class="btn btn-dark btn-lg toggle"><i class="fa fa-bars"></i></a>
    <nav id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <a id="menu-close" href="/" class="btn btn-light btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
            <li class="sidebar-brand">
                <a href="/">Little Wheels</a>
            </li>
				<%== intellinav  %>
        </ul>
    </nav>


	<%= yield %>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    </h4>
                    <ul class="list-unstyled">
                        <li><i class="fa fa-phone fa-fw"></i> (+61) 404-899-780</li>
                        <li><i class="fa fa-envelope-o fa-fw"></i>  <a href="mailto:littlewheels@gmail.com">littlewheels@gmail.com</a>
                        </li>
                    </ul>
                    <br>
                    <ul class="list-inline">
                        <li>
                            <a href="http://www.facebook.com/littlewheels"><i class="fa fa-facebook fa-fw fa-3x"></i></a>
                        </li>
                        <li>
                            <a href="http://www.twitter.com/littlewheels"><i class="fa fa-twitter fa-fw fa-3x"></i></a>
                        </li>
                    </ul>
                    <hr class="small">
                    <p class="text-muted">Copyright &copy; Little Wheels 2014</p>
                </div>
            </div>
        </div>
    </footer>

    <script>
    // Closes the sidebar menu
    $("#menu-close").click(function(e) {
        e.preventDefault();
        $("#sidebar-wrapper").toggleClass("active");
    });

    // Opens the sidebar menu
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#sidebar-wrapper").toggleClass("active");
    });

    // Scrolls to the selected menu item on the page
    $(function() {
        $('a[href*=#]:not([href=#])').click(function() {
            if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') || location.hostname == this.hostname) {

                var target = $(this.hash);
                target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                if (target.length) {
                    $('html,body').animate({
                        scrollTop: target.offset().top
                    }, 1000);
                    return false;
                }
            }
        });
    });
    </script>

</body>
</html>
