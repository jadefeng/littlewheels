<div class="container">
	<h1>Other parents in your area!</h1>

	<% @users.each do |user| %> 
	<div class="index_box">

		<div class="index">
			<img src=<%= user.image  %> >
		</div>

		<div class="index"> <h3> <%= link_to user.first_name, user  %> </h3>
		<h4> <strong> Suburb:</strong> <%= user.suburb %> </h4> 
			<% school_list = [] %>
			<% user.kids.each do |kid| %>
				<% school_name = kid.school.name %>
				<% school_list << school_name %>			
			<% end %>
		<h4> <strong>Schools:</strong> <%= school_list.uniq.join ", "  %> </h4>
		<% distance =  %>
		<h4><strong>Distance:</strong> TBD from @current_user.map_address</h4>
		</div>

		<div class="index">

		<% @result = Geocoder.search(user.map_address).first %>
		<iframe
		  width="300"
		  height="190"
		  frameborder="0" style="border:0"
		  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyByeW3PQr7VCnExkxH9pas6C2EfAUDdDsQ
		    &q=<%= @result.latitude %>,<%= @result.longitude  %>">
		</iframe>

		</div>	
	</div>
	<% end %>
</div>